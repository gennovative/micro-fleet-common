{
	"name": "@micro-fleet/common",
	"version": "1.2.4",
	"description": "Contains stuff used by other packages and micro services.",
	"scripts": {
		"build": "npm run compile && npm run test",
		"clean": "rimraf dist coverage .nyc_output",
		"definition": "node ../../../scripts/definition.js",
		"dedup": "rimraf node_modules/**/node_modules/**/typings",
		"compile": "npm run clean && npm run tslint && tsc --pretty",
		"release": "npm run build && npm run definition",
		"test": "nyc --reporter=json --reporter=html --include dist/app/**/*.js mocha --recursive dist/test",
		"tslint": "tslint -c tslint.json 'src/**/*.ts'",
		"prepublishOnly": "npm run release",
		"watch": "npm run clean && npm run tslint && tsc --watch --pretty"
	},
	"dependencies": {
		"automapper-ts": "~1.8",
		"joi": "~13.0",
		"inversify": "~4.11",
		"lodash": "~4.17",
		"reflect-metadata": "~0.1"
	},
	"devDependencies": {
		"@types/chai": "~4.1",
		"@types/chai-spies": "~0.0.1",
		"@types/debug": "~0.0.30",
		"@types/joi": "~13.0",
		"@types/lodash": "~4.14",
		"@types/mocha": "~5.2",
		"@types/node": "~8.10",
		"automapper-ts": "~1.8",
		"chai": "~4.1",
		"chai-spies": "git://github.com/chaijs/chai-spies.git#b11aeebf",
		"fs-extra": "~6.0",
		"mocha": "~5.2",
		"nyc": "~12.0",
		"rimraf": "~2.6",
		"ts-declarator": "~1.0",
		"tslint": "~5.10",
		"typescript": "~2.9"
	},
	"publishConfig": {
		"access": "public"
	},
	"author": {
		"name": "gennovative",
		"url": "https://github.com/gennovative"
	},
	"engines": {
		"node": ">=8.0.0"
	},
	"license": "MIT",
	"private": false,
	"main": "./dist/app/index.js",
	"types": "./typings/app.d.ts",
	"repository": "git@github.com:gennovative/micro-fleet-common.git"
}
